      function getDes() {
          var a = location.search.substring(4,1000);
          $.ajax({
              'url':'getDetail/'+a,
              'dataType':'JSON',
              'type':'post',
              'success':function (result) {
                  $(result).each(function () {
                      $(".mian_b_bg_xz").append("<tr><td>"+this.detailsid+"</td><td>"+this.cuisine.cuisinename+"</td><td>"+this.detailscount+"</td><td>"+this.indent.totalmoney+"</td><td><a href='javascript:void(0)' onclick='back()'>返回</a></td></tr>")
                  })
              }
          })
      }



