            }


            function previous() {
                $("a[title='上一页']").click(function () {
                    $(".tb tr:gt(0)").remove();
                    page -= 1;
                    if (page <= 0) page = 1;
                    if (page >= CargoPageCount) page = CargoPageCount
                    fy(page);
                })
            }

















