            function getdel() {
                var checkbox_value = [];
                var obj = document.getElementsByName("indent")
                for (var k in obj) {
                    if (obj[k].checked)
                        checkbox_value.push(obj[k].value)
                }
                $.ajax({
                    "url": "getdel",
                    "dataType": "json",
                    "type": "post",
                    "data": {
                        'arrays[]': checkbox_value
                    },
                    "success": function (result) {
                        if (result > 0) {
